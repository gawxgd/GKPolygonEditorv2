<Window x:Class="PolygonEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytor Wielokątów" Height="600" Width="800">
    <Window.Resources>
        <ContextMenu x:Key="EdgeContextMenu">
            <MenuItem Header="Make Horizontal" Click="MakeHorizontal_Click"/>
            <MenuItem Header="Make Vertical" Click="MakeVertical_Click"/>
            <MenuItem Header="Remove Constraint" Click="RemoveConstraint_Click"/>
            <MenuItem Header="Add Vertex" Click="AddVertex_Click"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Canvas Name="DrawingCanvas" Background="White" MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseMove="Canvas_MouseMove" MouseRightButtonDown="Canvas_MouseRightButtonDown" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightGray">
            <Button Content="Nowy Wielokąt" Click="NewPolygon_Click" Margin="5"/>
            <Button Content="Rysuj Wielokąt" Click="DrawPolygon_Click" Margin="5"/>
            <Button Content="Usuń Zaznaczony Wierzchołek" Click="RemoveVertex_Click" Margin="5"/>
            <Button Content="Toggle Polygon Dragging" Click="TogglePolygonDragging_Click"/>
            <Button Content="Przełącz na Bezier" Click="ToggleBezier_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
